[push]
    default = simple
[user]
    name = Brian Mearns
    email = bmearns@ieee.org
[core]
    excludesfile = ~/.gitignore-global
    autocrlf = true
[merge]
    #Don't ever fast forward with a merge.
    ff = false
[alias]
    cfg = config
    ci = commit
    co = checkout
    st = status
    stat = status
    tags = tag
    addall = add -A
    aa = add -A
    unstage = reset HEAD --
    last = log -1 HEAD
    who = shortlog
    whostat = shortlog -s
    amend = commit --amend --no-edit
    ammend = commit --amend --no-edit
    br = branch


